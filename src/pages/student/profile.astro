                        {[1, 2, 3, 4, 5].map(level => (
                          <div class={`w-2 h-2 rounded-full ${level <= Math.round(avgSkillRatings.creativity) ? 'bg-gray-900' : 'bg-gray-300'}`}></div>
                        ))}
                      </div>
                      <span class="text-lg font-semibold text-gray-900 min-w-8">{avgSkillRatings.creativity.toFixed(1)}</span>
                    </div>
                  </div>
                  <div class="flex items-center justify-between bg-gray-50 rounded-lg px-4 py-3">
                    <div class="flex items-center">
                      <div class="w-5 h-5 bg-gray-600 text-white rounded-full flex items-center justify-center text-xs mr-3">5</div>
                      <span class="text-sm font-medium text-gray-700">{lang === 'zh-TW' ? '專業態度' : 'プロ意識'}</span>
                    </div>
                    <div class="flex items-center space-x-3">
                      <div class="flex space-x-1">
                        {[1, 2, 3, 4, 5].map(level => (
                          <div class={`w-2 h-2 rounded-full ${level <= Math.round(avgSkillRatings.professionalism) ? 'bg-gray-900' : 'bg-gray-300'}`}></div>
                        ))}
                      </div>
                      <span class="text-lg font-semibold text-gray-900 min-w-8">{avgSkillRatings.professionalism.toFixed(1)}</span>
