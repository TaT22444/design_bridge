            <!-- 詳細表示ボタン -->
            <div class="text-center mb-4">
              <button 
                id="toggle-evaluation-details"
                data-lang={lang}
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-gray-500 transition-colors"
              >
                <span id="toggle-text">{lang === 'zh-TW' ? '查看詳細評價' : '詳細な評価を見る'}</span>
                <svg id="toggle-icon" class="w-4 h-4 ml-2 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
            </div>

            <!-- 個別の評価コメント -->
            <div id="evaluation-details" class="hidden space-y-4">
              <h3 class="font-medium text-gray-900">{lang === 'zh-TW' ? '客戶評語' : 'クライアントからの評価'}</h3>
              {studentProfile.companyEvaluations.map(evaluation => (
                <div class="border border-gray-200 rounded-lg p-4">
                  <div class="flex items-start justify-between mb-3">
                    <div>
                      <h4 class="font-medium text-gray-900">{evaluation.company}</h4>
                      <p class="text-sm text-gray-600">{evaluation.project}</p>
                      <p class="text-xs text-gray-500">{evaluation.period}</p>
                    </div>
                    <div class="text-right">
                      <div class="flex items-center space-x-1">
                        {[1, 2, 3, 4, 5].map(star => (
                          <svg class={`w-4 h-4 ${star <= Math.round(evaluation.overallRating) ? 'text-gray-900' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                          </svg>
                        ))}
                      </div>
                      <p class="text-sm font-medium text-gray-900">{evaluation.overallRating}</p>
                    </div>
                  </div>
                  <p class="text-sm text-gray-600 leading-relaxed">{evaluation.comment}</p>
                </div>
              ))}
            </div>
          </div>

          <script>
            document.addEventListener('DOMContentLoaded', function() {
              const toggleButton = document.getElementById('toggle-evaluation-details');
              const toggleText = document.getElementById('toggle-text');
              const toggleIcon = document.getElementById('toggle-icon');
              const evaluationDetails = document.getElementById('evaluation-details');
              
              if (toggleButton && evaluationDetails && toggleText && toggleIcon) {
                const currentLang = toggleButton.getAttribute('data-lang');
                const isZhTW = currentLang === 'zh-TW';
                
                toggleButton.addEventListener('click', function() {
                  const isHidden = evaluationDetails.classList.contains('hidden');
                  
                  if (isHidden) {
                    // 詳細を表示
                    evaluationDetails.classList.remove('hidden');
                    toggleText.textContent = isZhTW ? '隱藏詳細評價' : '詳細な評価を隠す';
                    toggleIcon.classList.add('rotate-180');
                  } else {
                    // 詳細を隠す
                    evaluationDetails.classList.add('hidden');
                    toggleText.textContent = isZhTW ? '查看詳細評價' : '詳細な評価を見る';
                    toggleIcon.classList.remove('rotate-180');
                  }
                });
              }
            });
          </script>

