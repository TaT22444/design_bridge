              {studentProfile.portfolio.map(project => (
                <div class="border border-gray-200 rounded-lg overflow-hidden">
                  <div class="aspect-video bg-gray-100 flex items-center justify-center">
                    <svg class="w-10 sm:w-12 h-10 sm:h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div class="p-3 sm:p-4">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2 space-y-1 sm:space-y-0">
                      <h3 class="font-medium text-gray-900 text-sm">{project.title}</h3>
                      <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-gray-100 text-gray-700 self-start sm:self-auto">
                        {project.type}
                      </span>
                    </div>
                    <p class="text-gray-600 text-xs mb-3 leading-relaxed">{project.description}</p>
