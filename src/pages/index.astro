---
import Layout from '../layouts/Layout.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import { t } from '../utils/i18n.ts';

const lang = Astro.url.searchParams.get('lang') || 'ja';
---

<Layout title="DesignBridge - 地方中小企業とデザイン学生をつなぐ">
	<div class="min-h-screen bg-gray-50">
		<!-- ナビゲーション -->
		<nav class="bg-white border-b border-gray-200">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center h-16">
					<div class="flex items-center">
						<h1 class="text-xl font-semibold text-gray-900">DesignBridge</h1>
					</div>
					<div class="flex items-center space-x-6">
						<LanguageSwitcher />
					</div>
				</div>
			</div>
		</nav>

		<!-- メインコンテンツ -->
		<div class="py-16 px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<!-- ヘッダー -->
				<div class="mb-16">
					<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
						{t('home.title', lang)}
					</h1>
					<p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
						{t('home.subtitle', lang)}
					</p>
				</div>

				<!-- 選択カード -->
				<div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
					<!-- 学生用 -->
					<div class="bg-white border border-gray-200 rounded-lg p-8 hover:shadow-md transition-shadow duration-200">
						<div class="w-16 h-16 bg-gray-900 rounded-lg flex items-center justify-center mx-auto mb-6">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-semibold text-gray-900 mb-4">{t('home.students.title', lang)}</h3>
						<p class="text-gray-600 mb-6 leading-relaxed">
							{t('home.students.description', lang)}
						</p>
						<ul class="text-left text-gray-600 mb-8 space-y-2">
							<li class="flex items-center">
								<div class="w-1.5 h-1.5 bg-gray-900 rounded-full mr-3"></div>
								{t('home.students.feature1', lang)}
							</li>
							<li class="flex items-center">
								<div class="w-1.5 h-1.5 bg-gray-900 rounded-full mr-3"></div>
								{t('home.students.feature2', lang)}
							</li>
							<li class="flex items-center">
								<div class="w-1.5 h-1.5 bg-gray-900 rounded-full mr-3"></div>
								{t('home.students.feature3', lang)}
							</li>
						</ul>
						<a href={`/student?lang=${lang}`} class="w-full bg-gray-900 hover:bg-gray-800 text-white py-3 px-6 rounded-md font-medium text-lg transition-colors block">
							{t('home.students.cta', lang)}
						</a>
					</div>

					<!-- 企業用 -->
					<div class="bg-white border border-gray-200 rounded-lg p-8 hover:shadow-md transition-shadow duration-200">
						<div class="w-16 h-16 bg-gray-700 rounded-lg flex items-center justify-center mx-auto mb-6">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-2M7 21h2m-2 0H3m4 0V9a2 2 0 012-2h2a2 2 0 012 2v12"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-semibold text-gray-900 mb-4">{t('home.companies.title', lang)}</h3>
						<p class="text-gray-600 mb-6 leading-relaxed">
							{t('home.companies.description', lang)}
						</p>
						<ul class="text-left text-gray-600 mb-8 space-y-2">
							<li class="flex items-center">
								<div class="w-1.5 h-1.5 bg-gray-700 rounded-full mr-3"></div>
								{t('home.companies.feature1', lang)}
							</li>
							<li class="flex items-center">
								<div class="w-1.5 h-1.5 bg-gray-700 rounded-full mr-3"></div>
								{t('home.companies.feature2', lang)}
							</li>
							<li class="flex items-center">
								<div class="w-1.5 h-1.5 bg-gray-700 rounded-full mr-3"></div>
								{t('home.companies.feature3', lang)}
							</li>
						</ul>
						<a href={`/company?lang=${lang}`} class="w-full bg-gray-700 hover:bg-gray-800 text-white py-3 px-6 rounded-md font-medium text-lg transition-colors block">
							{t('home.companies.cta', lang)}
						</a>
					</div>
				</div>

				<!-- 統計情報 -->
				<div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
					<div class="bg-white border border-gray-200 rounded-lg p-6">
						<div class="text-3xl font-bold text-gray-900 mb-2">500+</div>
						<div class="text-gray-600">{t('stats.students', lang)}</div>
					</div>
					<div class="bg-white border border-gray-200 rounded-lg p-6">
						<div class="text-3xl font-bold text-gray-900 mb-2">200+</div>
						<div class="text-gray-600">{t('stats.companies', lang)}</div>
					</div>
					<div class="bg-white border border-gray-200 rounded-lg p-6">
						<div class="text-3xl font-bold text-gray-900 mb-2">1,200+</div>
						<div class="text-gray-600">{t('stats.projects', lang)}</div>
					</div>
					<div class="bg-white border border-gray-200 rounded-lg p-6">
						<div class="text-3xl font-bold text-gray-900 mb-2">4.8</div>
						<div class="text-gray-600">{t('stats.rating', lang)}</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>
