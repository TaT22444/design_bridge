---
export interface Props {
	title?: string;
}

const { title = 'DesignBridge - 地方中小企業とデザイン学生をつなぐプラットフォーム' } = Astro.props;
---

<!doctype html>
<html lang="ja" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="地域の中小企業と才能あるデザイン学生をつなぐマッチングプラットフォーム" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+JP:wght@400;500;600;700&family=Noto+Sans+TC:wght@400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="h-full bg-gray-50 font-sans antialiased">
		<slot />
	</body>
</html>

<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	html {
		font-family: 'Noto Sans JP', 'Noto Sans TC', 'Inter', 'Hiragino Sans', 'Hiragino Kaku Gothic ProN', 'Microsoft JhengHei', 'PingFang TC', 'Meiryo', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
	}
	
	body {
		margin: 0;
		padding: 0;
	}
</style>
